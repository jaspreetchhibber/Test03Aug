@model TestApp03Aug.BLL.Models.EmployeeSalaryDto

@{
    ViewData["Title"] = "Add Monthly Salary";
}

<h2>Add Monthly Salary</h2>

<form asp-action="AddMonthlySalary">
    <div class="form-horizontal">
        <h4>Employee</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="EmployeeId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="EmployeeId" asp-items="@(new SelectList(ViewBag.Employees, "Id", "FirstName"))" class="form-control"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Amount" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SalaryDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="date" asp-for="SalaryDate" class="form-control" />
                <span asp-validation-for="SalaryDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-2">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Salary" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a class="btn btn-primary mt-2" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}